alias ls='lsd'
alias ll='lsd -lh'
alias la='lsd -lha'
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'
alias dl='~/Downloads'
alias pic='~/Pictures'
alias doc='~/Documents'
alias sc='$SCRIPTS'
alias cfg='$XDG_COFIG_HOME'
alias g='$GIT'
alias dot='$DOTFILES'
alias b='cd ..'
alias bb='cd ../..'
alias bbb='cd ../../..'
alias bbbb='cd ../../../..'
alias work='cd $(find ~/work -type d | fzf)'
alias cp='cp -v'
alias mv='mv -v'
alias rm='rm -v'
alias mkdir='mkdir -pv'
alias vim='nvim'
alias p='sudo pacman -Syu'
alias ga='git ls-files -mo | fzf -m | xargs -r git add; git status'
alias gc='git commit -m'
alias gr='git diff --cached --name-only | fzf -m | xargs -r git reset HEAD; git status'
alias gs='git status'
alias gd='git diff'
alias branch='git checkout $(git branch -r | sed "s/ origin\///" | fzf)'
alias notes='vim ~/Documents/notes.txt'
alias todo='vim ~/Documents/todo.txt'
alias ec='vim $(find ~/.config/ -type f | grep -Evi "$(cat ~/.config/cfg-ignore-list.txt)" | fzf)'
alias es='vim $(find ~/.scripts/ -type f | fzf)'
alias ev='vim ~/.config/nvim/init.vim'
alias stop-containers='docker stop $(docker ps -aq)'
alias remove-containers='docker rm -f $(docker ps -aq)'
alias remove-images='docker rmi $(docker images -aq)'
alias psg='ps aux | grep'
alias icdiff='icdiff --color-map="add:green,change:yellow_bold,description:magenta_bold,meta:magenta,separator:magenta_bold,subtract:red_bold,line-numbers:white_bold"'
alias redshift='redshift -PO'
alias fp='fzf --preview "bat {} --color=always"'
