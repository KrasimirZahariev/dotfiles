#!/bin/bash

alias ls='lsd'
alias ll='lsd -lh'
alias la='lsd -lha'
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'
alias chmod='chmod -v'
alias chown='chown -v'
alias chgrp='chgrp -v'
alias dl='~/Downloads'
alias pic='~/Pictures'
alias doc='~/Documents'
alias sc='$SCRIPTS'
alias cfg='$XDG_COFIG_HOME'
alias g='$GIT'
alias dot='$DOTFILES'
alias b='cd ..'
alias bb='cd ../..'
alias bbb='cd ../../..'
alias bbbb='cd ../../../..'
alias cp='cp -v'
alias mv='mv -v'
alias rm='rm -v'
alias mkdir='mkdir -pv'
alias o='xdg-open'
alias vim='nvim'
alias p='sudo pacman'
alias notes='vim ~/Documents/notes.txt'
alias todo='vim ~/Documents/todo.txt'
alias gs='git status'
alias gc='git commit -m'
alias ga='forgit::add'
alias gd='forgit::diff'
alias gi='forgit::ignore'
alias gl='forgit::log'
alias gss='forgit::stash::show'
alias grh='forgit::reset::head'
alias grs='forgit::restore'
alias gclean='forgit::clean'
alias work='cd $(find ~/work -maxdepth 1 -type d | fzf); git status'
alias branch='git checkout $(git branch -r | sed "s/ origin\///" | fzf); git status'
alias stop-containers='docker stop $(docker ps -aq)'
alias remove-containers='docker rm -f $(docker ps -aq)'
alias remove-images='docker rmi $(docker images -aq)'
alias psg='ps aux | grep'
alias fkill="ps aux | sed 1d | fzf -m | awk '{print $2}' | xargs -r sudo kill +${1:-9}"
alias icdiff='icdiff --color-map="add:green,change:yellow_bold,description:magenta_bold,meta:magenta,separator:magenta_bold,subtract:red_bold,line-numbers:white_bold"'
alias redshift='redshift -PO'
alias fpb='fzf --preview "bat {} --color=always"'
alias cmon='sudo $(history -p !!)'
alias cpl='$(history -p !!) | xclip -selection clipboard'
alias termbin='nc termbin.com 9999 | tee /dev/tty | xclip -selection clipboard'
