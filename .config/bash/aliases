#!/usr/bin/env bash

alias ls='lsd -A --size short'
alias ll='lsd -lh -A --size short'
alias la='lsd -lha -A --size short'
alias lad='lsd -lhat -A --size short'
alias las='lsd -lha -A --size short --total-size'
alias lr='tree -aCI ".git"| less -IR'
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'
alias chmod='chmod -v'
alias chown='chown -v'
alias chgrp='chgrp -v'
alias cp='cp -v'
alias mv='mv -v'
alias rm='rm -v'
alias mkdir='mkdir -pv'
alias sudo='sudo '
alias cal='cal --color -m'
alias o='bkgr xdg-open'
alias vim='nvim'
alias f='fff'
alias p='sudo pacman'
alias pgrep='pgrep -iaf'
alias icdiff='icdiff --color-map="add:green,change:yellow_bold,description:magenta_bold,meta:magenta,separator:magenta_bold,subtract:red_bold,line-numbers:white_bold"'
alias redshift='redshift -PO'
alias fpb='fzf --height 100% --preview "bat {} --color=always"'
alias cmon='sudo $(history -p !!)'
alias cpl='$(history -p !!) | xclip -selection clipboard'
alias g++='g++ -pedantic-errors -Wall -Weffc++ -Wextra -Wsign-conversion -std=c++2a'
alias locate='locate -i'
alias ssys='sudo SYSTEMD_EDITOR=$EDITOR systemctl'
alias mvn='mvn -gs $XDG_CONFIG_HOME/maven/settings.xml'
alias ccze='ccze -A -o nolookups'
alias tail='colored_tail'
alias ps='colored_ps'
alias man='colored_man'
alias k='kubectl'
alias strs='start-tmux-restore-session'

# faster cd
alias dl='$DOWNLOADS_DIR'
alias pic='$PICTURES_DIR'
alias doc='$DOCUMENTS_DIR'
alias bin='$SCRIPTS_DIR'
alias cfg='$XDG_CONFIG_HOME'
alias vcs='$VCS_DIR'
alias aur='$AUR_DIR'
alias books='$DOCUMENTS_DIR/books'
alias b='cd ..'
alias bb='cd ../..'
alias 3b='cd ../../..'
alias 4b='cd ../../../..'
alias 5b='cd ../../../../..'

# git related
alias gb='git_checkout_branch'
alias gs='git status -sb'
alias gc='git_quick_commit'
alias ga='forgit::add'
alias gd='forgit::diff'
alias gi='forgit::ignore'
alias gl='forgit::log'
alias gss='forgit::stash::show'
alias grh='forgit::reset::head'
alias grs='forgit::restore'
alias gclean='forgit::clean'
alias gpo='git remote prune origin'

alias dotfiles='git --git-dir=$DOTFILES_DIR --work-tree=$HOME'
alias dgs='git --git-dir=$DOTFILES_DIR --work-tree=$HOME status -sb'
alias dgc='dotfiles_git_quick_commit'
alias dga='dotforgit::add'
alias dgd='dotforgit::diff'
alias dgi='dotforgit::ignore'
alias dgl='dotforgit::log'
alias dgss='dotforgit::stash::show'
alias dgrh='dotforgit::reset::head'
alias dgrs='dotforgit::restore'
alias dgclean='dotforgit::clean'
