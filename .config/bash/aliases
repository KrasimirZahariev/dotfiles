#!/bin/bash

alias ls='lsd'
alias ll='lsd -lh'
alias la='lsd -lha'
alias lr='tree -aCI ".git"| less -IR'
alias less='less -IR'
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'
alias chmod='chmod -v'
alias chown='chown -v'
alias chgrp='chgrp -v'
alias cp='cp -v'
alias mv='mv -v'
alias rm='rm -v'
alias mkdir='mkdir -pv'
alias sudo='sudo '
alias cal='cal -m'
alias o='xdg-open'
alias vim='nvim'
alias f='fff'
alias p='sudo pacman'
alias psg='ps aux | grep'
alias icdiff='icdiff --color-map="add:green,change:yellow_bold,description:magenta_bold,meta:magenta,separator:magenta_bold,subtract:red_bold,line-numbers:white_bold"'
alias redshift='redshift -PO'
alias fpb='fzf --preview "bat {} --color=always"'
alias cmon='sudo $(history -p !!)'
alias cpl='$(history -p !!) | xclip -selection clipboard'
alias g++='g++ -pedantic-errors -Wall -Weffc++ -Wextra -Wsign-conversion -std=c++2a'

# faster cd
alias dl='~/Downloads'
alias pic='~/Pictures'
alias doc='~/Documents'
alias bin='$SCRIPTS'
alias cfg='$XDG_CONFIG_HOME'
alias vcs='$GIT'
alias dot='$DOTFILES'
alias aur='$AUR'
alias b='cd ..'
alias bb='cd ../..'
alias 3b='cd ../../..'
alias 4b='cd ../../../..'
alias 5b='cd ../../../../..'

# git related
alias gcb='checkout_branch'
alias gs='git status'
alias gc='git commit -m'
alias ga='forgit::add'
alias gd='forgit::diff'
alias gi='forgit::ignore'
alias gl='forgit::log'
alias gss='forgit::stash::show'
alias grh='forgit::reset::head'
alias grs='forgit::restore'
alias gclean='forgit::clean'
alias gpo='git remote prune origin'

alias dotfiles='git --git-dir=$HOME/.dotfiles/ --work-tree=$HOME'
alias dgs='git --git-dir=$HOME/.dotfiles/ --work-tree=$HOME status'
alias dgc='git --git-dir=$HOME/.dotfiles/ --work-tree=$HOME commit -m'
alias dga='dotforgit::add'
alias dgd='dotforgit::diff'
alias dgi='dotforgit::ignore'
alias dgl='dotforgit::log'
alias dgss='dotforgit::stash::show'
alias dgrh='dotforgit::reset::head'
alias dgrs='dotforgit::restore'
alias dclean='dotforgit::clean'
