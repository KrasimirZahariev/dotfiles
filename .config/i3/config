############## STARTUP ##################

exec_always --no-startup-id wal -R
exec_always --no-startup-id compton -b
exec_always --no-startup-id dunst 
exec_always --no-startup-id poly-launch
exec_always --no-startup-id setxkbmap us,bg -variant ,phonetic -option 'grp:lalt_lshift_toggle'
exec_always --no-startup-id setxkbmap -option caps:escape

########################################

############## GAPS ###################

for_window [class="^.*"] border pixel 2
gaps inner 7
gaps outer 0
smart_gaps on
smart_borders on

######################################

############ COLORS ##################

# Set colors from Xresources
set_from_resource $fg color7 #F13375
set_from_resource $bg color2 #f0f0f0
set_from_resource $fborder color6 #F13375

# CLASS                   BORDER   BACKGROUND  TEXT  INDICATOR  CHILD-BORDER
