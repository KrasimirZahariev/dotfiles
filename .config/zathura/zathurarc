set page-padding 2
set statusbar-h-padding 0
set statusbar-v-padding 0
set selection-clipboard clipboard
set recolor true
set recolor-darkcolor "#91661a"
set recolor-lightcolor "#3b3937"


map <C-u> scroll half-up
map <C-d> scroll half-down
map D toggle_page_mode
map <Space> recolor
map zi zoom in
map zo zoom out
map w feedkeys ":exec zathura-write-selection $FILE <Return>"
