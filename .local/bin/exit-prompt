#!/bin/sh

xColor0=$(xrdb -query | grep '\*color0'| awk '{print $NF}')
xColor2=$(xrdb -query | grep '\*color2'| awk '{print $NF}')

ACTION=$(printf "Restart\nShutdown\nLogout" | dmenu -i -nb "$xColor0" -nf "$xColor2" -sb "$xColor2" -sf "$xColor0")

[ -z "$ACTION" ] && exit

case "$ACTION" in
	Restart)
		shutdown now -r
		exit;;
	Shutdown)
		shutdown now
		exit;;
	Logout)
		pkill -u "$LOGNAME"
		exit;;
esac
