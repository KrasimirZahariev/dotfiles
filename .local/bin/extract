#!/bin/env bash


_dir="."
[ -n "$2" ] && _dir="$2"

case "$1" in
  *.tar.bz2) tar xvjf   "$1" -C "$_dir" ;;
  *.tar.gz)  tar xvzf   "$1" -C "$_dir" ;;
  *.tar.xz)  tar xvJf   "$1" -C "$_dir" ;;
  *.tbz2)    tar xvjf   "$1" -C "$_dir" ;;
  *.tgz)     tar xvzf   "$1" -C "$_dir" ;;
  *.tar)     tar xvf    "$1" -C "$_dir" ;;
  *.lzma)    unlzma     "$1"    "$_dir" ;;
  *.bz2)     bunzip2    "$1"    "$_dir" ;;
  *.rar)     unrar x    "$1" -ad"$_dir" ;;
  *.gz)      gunzip     "$1"    "$_dir" ;;
  *.zip)     unzip      "$1" -d "$_dir" ;;
  *.Z)       uncompress "$1"    "$_dir" ;;
  *.xz)      unxz       "$1"    "$_dir" ;;
  *.7z)      7za x      "$1" -o "${1::-3}" ;;
  *) echo "extract: \"$1\" - unknown archive method";;
esac
