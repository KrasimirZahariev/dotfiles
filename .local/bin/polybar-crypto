#!/bin/dash
# vim:filetype=sh

### coingecko.com
crypto_data=$(curl -s \
  'https://api.coingecko.com/api/v3/simple/price?&vs_currencies=usd&ids=cardano%2Cbitcoin')

ADA=$(echo "$crypto_data" | jq '.cardano.usd')
BTC=$(echo "$crypto_data" | jq '.bitcoin.usd')

printf "BTC  $BTC       ADA  $ADA       "


