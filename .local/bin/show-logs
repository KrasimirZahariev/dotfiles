#!/bin/dash

# 0 - emerg
# 1 = alert
# 2 = crit
# 3 = err
# 4 = warning
# 5 = notice
# 6 = info
# 7 = debug

_LOG_HEADER="\n------------------------------------- LOG %s -------------------------------------\n"
_level="$1"
[ -z "$_level" ] && _level=3

for _boot in $(seq -4 0); do
  # shellcheck disable=SC2059
  printf "$_LOG_HEADER" "$_boot"

  journalctl -p "$_level" -x -b "$_boot" \
    | cut -d ' ' -f 1-2,5- \
    | sort \
    | uniq -u \
    | ccze -A

done
