#!/usr/bin/env bash

### DOTFILES setup

cd $HOME

git clone --bare https://github.com/KrasimirZahariev/dotfiles.git $HOME/.dotfiles

function dotfiles {
  /usr/bin/git --git-dir=$HOME/.dotfiles --work-tree=$HOME $@
}

if grep -q ".dotfiles" $HOME/.gitignore 2>/dev/null; then
  echo ".dotfiles" >> $HOME/.gitignore
fi;

dotfiles checkout
if [ $? = 0 ]; then
  echo "Dotfiles checked out";
else
  echo "Replacing conflicting files";
  dotfiles checkout 2>&1 | egrep "\s+\." | awk {'print $1'} | xargs -I{} rm -v {}
  dotfiles checkout
fi;

dotfiles config --local status.showUntrackedFiles no

rm $HOME/.bashrc
rm $HOME/.bash_profile

sudo cp -r etc/* /etc

### FONTS

mkdir -p $HOME/.local/share/fonts
cd $HOME/.local/share/fonts

FONT_URL="https://github.com/tonsky/FiraCode/raw/master/distr/ttf/FiraCode-"
FONTS=("Bold" "Light" "Medium" "Regular" "Retina" "SemiBold")

for font in ${FONTS[@]}; do
  wget $FONT_URL$font".ttf"
done


### ST, DMENU

mkdir $HOME/git
cd $HOME/git

BASE_GIT_URL="https://github.com/KrasimirZahariev/"
REPOS=("st" "dmenu")

for repo in ${REPOS[@]}; do
  git clone $BASE_GIT_URL$repo".git"
done

cd st
sudo make
sudo make clean install
cd ..

cd dmenu
sudo make
sudo make clean install


### AUR

mkdir $HOME/aur
cd $HOME/aur

BASE_AUR_URL="https://aur.archlinux.org/"
while read pkg; do
  git clone $BASE_AUR_URL$pkg".git"
  cd $pkg
  makepkg -s -i --noconfirm
  cd ..
done < $HOME/.config/packages/pkglist-aur.txt


### PYTHON packages
pip install -r $HOME/.config/packages/pkglist-python.txt


### NEOVIM

# vim plug
sh -c 'curl -fLo "${XDG_DATA_HOME:-$HOME/.local/share}"/nvim/site/autoload/plug.vim \
  --create-dirs https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim'

# nodejs provider
sudo npm install -g neovim


### OTHER
wal --theme base16-gruvbox-pale
sudo systemctl enable udevmon.service
sudo systemctl start udevmon.service
