#!/bin/dash

_ON=1
_OFF=0

main() {
  _device_id="$(_get_device_id)"

  if _is_device_enabled; then
    _touchpad_off
  else
    _touchpad_on
  fi
}

_get_device_id() {
  xinput list \
    | grep -Eio 'touchpad.*id=[0-9]+' \
    | awk -F'=' '{print $2}'
}

_is_device_enabled() {
  _status="$(xinput --list-props "$_device_id" \
    | grep -E "Device Enabled" \
    | awk '{print $NF}')"

  [ "$_status" != "1" ] && return 1
  return 0
}

_touchpad_off() {
  _toggle_device $_OFF \
    && notify-send "Touchpad" "OFF" \
    && killall xbanish \
    && ( nohup xbanish -a & )
}

_touchpad_on() {
  _toggle_device $_ON \
    && notify-send "Touchpad" "ON" \
    && killall xbanish \
    && ( nohup xbanish -m se & )
}

_toggle_device() {
  _mode="$1"
  xinput set-prop "$_device_id" "Device Enabled" "$_mode"
}

####################################################################################################
main "$@"; exit
